<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".RegisterActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chào mừng bạn"
        android:textColor="#2196F3"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng ký tài khoản"
        android:textSize="27sp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/tv_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/edt_fullNameR"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="Nhập họ và tên" />

    <EditText
        android:id="@+id/edt_usernameR"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="Nhập username" />

    <EditText
        android:id="@+id/edt_passwordR"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:hint="Nhập password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/edt_passwordRC"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:hint="Nhập lại password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_submitR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#03A9F4"
        android:text="Đăng ký"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#5B5B5B"
        android:text="Trở về"
        android:textSize="24sp"
        android:textStyle="bold" />


</LinearLayout>